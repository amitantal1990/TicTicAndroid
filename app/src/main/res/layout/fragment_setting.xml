<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Setting_F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fairfaqs.experi.ActivitesFragment.Setting_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/black"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

                <ImageButton
                    android:id="@+id/Goback"
                    android:layout_width="@dimen/back_btn_width"
                    android:layout_height="@dimen/back_btn_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="Privacy and Settings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/request_verification_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Request Verification"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/push_notification_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Push Notification"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacy_setting_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Privacy Setting"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacy_policy_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/terms_condition_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/change_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bottomline"
                android:padding="15dp"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
